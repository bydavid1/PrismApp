<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="LoginPrism.Views.AgregarDocente">

    <StackLayout>
        <Label Text="Registro de Docente" FontSize="Large" FontAttributes="Bold" HorizontalOptions="CenterAndExpand"/>
        <Entry Placeholder="Ingrese el nombre del docente" Text="{Binding Nombre}"/>
        <Button Text="Registrar" Command="{Binding Add}"/>
    </StackLayout>
</ContentPage>